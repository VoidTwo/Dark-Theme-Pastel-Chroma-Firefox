{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Dark Theme Pastel Chroma",
    "short_name": "Dark Pastel Chroma",
    "description": "Clean dark theme with pastel chroma RGB lighting",

    "developer":
    {
        "name": "VoidTwo",
        "url": "https://github.com/VoidTwo/Dark-Theme-Pastel-Chroma-Firefox"
    },

    "icons":
    {
        "16": "icons/icon_16x16.png",
        "32": "icons/icon_32x32.png",
        "48": "icons/icon_48x48.png",
        "64": "icons/icon_64x64.png",
        "96": "icons/icon_96x96.png",
        "128": "icons/icon_128x128.png"
    },

    "browser_specific_settings":
    {
        "gecko":
        {
            "strict_min_version": "89.0a1"
        }
    },

    "permissions": ["alarms", "theme"],

    "background":
    {
        "scripts": ["background.js"]
    }
}